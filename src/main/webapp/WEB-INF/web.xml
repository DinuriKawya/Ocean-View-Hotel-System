<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0"
         metadata-complete="true">

    <display-name>OceanView Hotel</display-name>

    <listener>
        <listener-class>oceanview.listener.SettingsListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Auth filter (replaces @WebFilter since metadata-complete=true) -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>oceanview.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Auth -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>oceanview.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>oceanview.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>oceanview.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Reservations -->
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>oceanview.servlet.ReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/reservations</url-pattern>
    </servlet-mapping>

    <!-- Rooms -->
    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>oceanview.servlet.RoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomServlet</servlet-name>
        <url-pattern>/rooms</url-pattern>
    </servlet-mapping>

    <!-- Check-in / Check-out -->
    <servlet>
        <servlet-name>CheckInServlet</servlet-name>
        <servlet-class>oceanview.servlet.CheckInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckInServlet</servlet-name>
        <url-pattern>/checkin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>oceanview.servlet.CheckOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckOutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <!-- Users -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>oceanview.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <!-- Banks -->
    <servlet>
        <servlet-name>BankServlet</servlet-name>
        <servlet-class>oceanview.servlet.BankServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BankServlet</servlet-name>
        <url-pattern>/banks</url-pattern>
    </servlet-mapping>

    <!-- Reports -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>oceanview.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <!-- Audit Log -->
    <servlet>
        <servlet-name>AuditLogServlet</servlet-name>
        <servlet-class>oceanview.servlet.AuditLogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuditLogServlet</servlet-name>
        <url-pattern>/audit</url-pattern>
    </servlet-mapping>

    <!-- Billing & Revenue -->
    <servlet>
        <servlet-name>BillingServlet</servlet-name>
        <servlet-class>oceanview.servlet.BillingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillingServlet</servlet-name>
        <url-pattern>/billing</url-pattern>
    </servlet-mapping>

    <!-- System Settings -->
    <servlet>
        <servlet-name>SettingsServlet</servlet-name>
        <servlet-class>oceanview.servlet.SettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SettingsServlet</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

</web-app>
